@model Plan
<form action="/createPlan" method="post">
    <div class="row">
        <div class="col-sm-6 form-group row">
            <label asp-for="Title" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Title" class="form-control">
                <p><span asp-validation-for="Title" class="text-danger"></span></p>
            </div>
        </div>

        <div class="col-sm-6 form-group row">
            <label asp-for="Time" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Time" class="form-control">
                <p><span asp-validation-for="Time" class="text-danger"></span></p>
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-sm-6 form-group row">
            <label asp-for="Date" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Date" class="form-control">
                <p><span asp-validation-for="Date" class="text-danger"></span></p>
            </div>
        </div>

        <div class="col-sm-6 form-group row">
            <label asp-for="Duration" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="form-row"> 
                    <div class="col-sm-6">
                        <input asp-for="Duration" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <select asp-for="DurationType" class="form-control">
                            <option value="Days">Days</option>
                            <option value="Hours">Hours</option>
                            <option value="Minutes">Minutes</option>
                        </select>
                    </div>
                </div>
                <p><span asp-validation-for="Duration" class="text-danger"></span></p>
            </div>
        </div>

    </div>
    <div class="row">

        <div class="col-sm-6 form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <p><span asp-validation-for="Description" class="text-danger"></span></p>
                <button type="submit" class="btn btn-outline-success text-right">Create Activity</button>
            </div>
        </div>
    </div>
</form>